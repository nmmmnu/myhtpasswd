#!/bin/sh

OP="$1"
HOST="$2"
USER="$3"
PASS="$4"

case  $OP  in
VERIFY)
	#echo "verify... $* <br>"

	EMAIL="$USER@$HOST"

	exec doveadm auth test "$EMAIL" "$PASS" >& /tmp/myhtpasswd.help.1
	;;

CHANGE)
	#echo "change... $* <br>"

	FILE="/VMAIL/AUTH/$HOST"

	exec htpasswd -sb "$FILE" "$USER" "$PASS" >& /tmp/myhtpasswd.help.2
	;;

*)
	exit 1
	;;
esac

